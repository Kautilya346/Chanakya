# Chanakya Server Environment Variables
# ======================================
# Copy this file to .env and fill in your values

# Google Gemini API Key (Required)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# NLP Pipeline Configuration
NLP_MIN_CONFIDENCE=0.3
NLP_CLARIFICATION_THRESHOLD=0.5
NLP_MAX_PROCESSING_TIME_MS=5000

# Audit Logging
ENABLE_AUDIT_LOGGING=true
LOG_RAW_INPUT=true

# Future: Database (for audit logs)
# DATABASE_URL=postgresql://user:password@localhost:5432/chanakya

# Future: Redis (for caching)
# REDIS_URL=redis://localhost:6379
